    // Terminal
    "terminal.background": "#0d0d0d",
    "terminal.foreground": "#eeffff",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#82AAFF",
    "terminal.ansiBrightBlack": "#546E7A",
    "terminal.ansiBrightBlue": "#82AAFF",
    "terminal.ansiBrightCyan": "#89DDFF",
    "terminal.ansiBrightGreen": "#C3E88D",
    "terminal.ansiBrightMagenta": "#C792EA",
    "terminal.ansiBrightRed": "#FF5370",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#FFCB6B",
    "terminal.ansiCyan": "#89DDFF",
    "terminal.ansiGreen": "#C3E88D",
    "terminal.ansiMagenta": "#C792EA",
    "terminal.ansiRed": "#FF5370",
    "terminal.ansiWhite": "#FFFFFF",
    "terminal.ansiYellow": "#FFCB6B",
    "terminal.tab.activeBorder": "#F4DB01",

    // Scrollbar & Shadows
    "scrollbarSlider.activeBackground": "#42a5f580",
    "scrollbarSlider.background": "#42a5f540",
    "scrollbarSlider.hoverBackground": "#42a5f560",
    "widget.shadow": "#00000030",
    "editorWidget.border": "#42a5f580",

    // Panels & Sidebars
    "panel.background": "#0d0d0d",
    "panel.border": "#42a5f540",
    "sideBar.background": "#121212",
    "sideBar.foreground": "#eeffff",
    "sideBarTitle.foreground": "#F4DB01",
    "sideBarSectionHeader.background": "#000000",
    "sideBarSectionHeader.foreground": "#F4DB01",

    // Additional Customizations
    "editorRuler.foreground": "#3d3d3d"
  },

  // ┌─────────────────────────────────────────────────────┐
  // │ SPATIAL NAVIGATION ENGINEERING                      │
  // └─────────────────────────────────────────────────────┘
  "workbench.list.smoothScrolling": true,
  "editor.fastScrollSensitivity": 5,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 8,
  "editor.scrollBeyondLastLine": false,
  "editor.mouseWheelScrollSensitivity": 1.25,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.showIcons": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabCloseButton": "off",

